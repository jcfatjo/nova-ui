---
// ===== Components
import BaseLayout from "../layouts/BaseLayout/BaseLayout.astro";
import Container from "../components/Layout/Container/Container.astro";
import Heading from "../components/Typography/Heading/Heading.astro";
import Link from "../components/Typography/Link/Link.astro";
import Box from "../components/Layout/Box/Box.astro";
import Text from "../components/Typography/Text/Text.astro";
---

<BaseLayout>
  <Container as="section" class="py-12 space-y-6">
    <Heading as="h1" size="2xl">Link</Heading>

    <Box>
      <Heading class="mb-2">Basic usage</Heading>
      <Box class="border border-gray-300 rounded-md p-8">
        <Link href="#">Visit Nova UI</Link>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Underline</Heading>
      <Box class="border border-gray-300 rounded-md p-8">
        <Box>
          <Link underline="always" href="#">
            Link (Underline always)
          </Link>
        </Box>
        <Box>
          <Link underline="hover" href="#">
            Link (Underline on hover)
          </Link>
        </Box>
        <Box>
          <Link underline="never" href="#">
            Link (Underline never)
          </Link>
        </Box>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Underline</Heading>
      <Box class="border border-gray-300 rounded-md p-8">
        <Text>
          Visit the{" "}
          <Link href="#" underline="always" colorPalette="teal">
            Nova UI
          </Link>
          {" "}website
        </Text>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">External</Heading>
      <Box class="border border-gray-300 rounded-md p-8">
        <Link href="https://google.com" target="_blank" colorPalette="purple" external>
          Visit Nova UI []
        </Link>
      </Box>
    </Box>
  </Container>
</BaseLayout>
