---
// ===== Components
import BaseLayout from "../layouts/BaseLayout/BaseLayout.astro";
import Container from "../components/Layout/Container/Container.astro";
import Heading from "../components/Typography/Heading/Heading.astro";
import HamburgerButton from "../components/Buttons/HamburgerButton/HamburgerButton.astro";
import Box from "../components/Layout/Box/Box.astro";
import Text from "../components/Typography/Text/Text.astro";

// ===== Props
const sizes = ["xs", "sm", "md", "lg", "xl"];

const variants = ["solid", "subtle", "surface", "outline", "ghost", "plain"];

const colorPalettes = [
  "slate", "gray", "zinc", "neutral", "stone", "red", "orange", "amber", "yellow", "lime", "green",
  "emerald", "teal", "cyan", "sky", "blue", "indigo", "violet", "purple", "fuchsia", "pink", "rose",
];
---

<BaseLayout>
  <Container as="section" class="py-12 space-y-6">
    <Heading as="h1" size="2xl">Hamburger Button</Heading>

    <Box>
      <Heading class="mb-2">Basic usage</Heading>
      <Box class="border border-gray-300 rounded-md p-8">
        <HamburgerButton />
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Sizes</Heading>
      <Box class="border border-gray-300 rounded-md p-8">
        <Box class="flex flex-row gap-6 items-end">
          {sizes.map((size) => (
            <Box class="flex flex-col items-center">
              <HamburgerButton variant="outline" {size} />
              <Text size="xs">{size}</Text>
            </Box>
          ))}
        </Box>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Variants</Heading>
      <Box class="border border-gray-300 rounded-md p-8">
        <Box class="flex flex-row gap-6">
          {variants.map((variant) => (
            <Box class="flex flex-col items-center">
              <HamburgerButton {variant} />
              <Text size="xs">{`${variant[0].toUpperCase()}${variant.slice(1)}`}</Text>
            </Box>
          ))}
        </Box>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Colors</Heading>
      <Box class="overflow-x-auto border border-gray-300 rounded-md p-8">
        <Box class="flex flex-row gap-6">
          {colorPalettes.map((colorPalette) => (
            <Box class="flex flex-col items-center">
              <HamburgerButton {colorPalette} />
              <Text size="xs">{`${colorPalette[0].toUpperCase()}${colorPalette.slice(1)}`}</Text>
            </Box>
          ))}
        </Box>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Custom icon</Heading>
      <Box class="overflow-x-auto border border-gray-300 rounded-md p-8">
        <HamburgerButton variant="ghost" aria-label="Open">[]</HamburgerButton>
      </Box>
    </Box>
  </Container>
</BaseLayout>
