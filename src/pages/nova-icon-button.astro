---
// ===== Components

import Button from "../components/Buttons/Button/Button.astro";
import BaseLayout from "../layouts/BaseLayout/BaseLayout.astro";
import Heading from "../components/Typography/Heading/Heading.astro";
import IconButton from "../components/Buttons/IconButton/IconButton.astro";

// ===== Props
const shapes = ["sharp", "rounded", "circular"];

const sizes = ["xs", "sm", "md", "lg", "xl"];

const fillings = ["solid", "tonal", "surface", "outline", "clear", "text"];

const colorPalettes = [
  "slate", "gray", "zinc", "neutral", "stone", "red", "orange", "amber", "yellow", "lime", "green",
  "emerald", "teal", "cyan", "sky", "blue", "indigo", "violet", "purple", "fuchsia", "pink", "rose",
];
---

<BaseLayout>
  <div class="p-16 space-y-6">
    <Heading as="h1" size="2xl">Icon Button</Heading>

    <div>
      <IconButton aria-label="Search database">[]</IconButton>
    </div>

    <div>
      <Heading class="mb-2">Shapes</Heading>
      <div class="flex flex-row gap-6 items-center">
        {shapes.map((shape) => (
          <div class="flex flex-col items-center">
            <IconButton aria-label="Search database" {shape}>[]</IconButton>
            <p>{`${shape[0].toUpperCase()}${shape.slice(1)}`}</p>
          </div>
        ))}
      </div>
    </div>

    <div>
      <Heading class="mb-2">Fillings</Heading>
      <div class="flex flex-row gap-6">
        {fillings.map((fill) => (
          <div class="flex flex-col items-center">
            <IconButton aria-label="Call support" {fill}>[]</IconButton>
            <p>{`${fill[0].toUpperCase()}${fill.slice(1)}`}</p>
          </div>
        ))}
      </div>
    </div>

    <div>
      <Heading class="mb-2">Sizes</Heading>
      <div class="flex flex-row gap-6 items-end">
        {sizes.map((size) => (
          <div class="flex flex-col items-center">
            <IconButton aria-label="Search database" variant="outline" {size}>[]</IconButton>
            <p>{size}</p>
          </div>
        ))}
      </div>
    </div>

    <div>
      <Heading class="mb-2">Colors</Heading>
      <div class="flex flex-row gap-6">
        {colorPalettes.map((colorPalette) => (
          <div class="flex flex-col items-center">
            <IconButton aria-label="Call support" {colorPalette}>[]</IconButton>
            <p>{`${colorPalette[0].toUpperCase()}${colorPalette.slice(1)}`}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
