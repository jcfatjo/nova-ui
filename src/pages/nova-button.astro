---
// ===== Components
import BaseLayout from "../layouts/BaseLayout/BaseLayout.astro";
import Heading from "../components/Typography/Heading/Heading.astro";
import Button from "../components/Buttons/Button/Button.astro";
import Text from "../components/Typography/Text/Text.astro";

// ===== Props
const shapes = ["sharp", "rounded", "circular"];

const sizes = ["xs", "sm", "md", "lg", "xl"];

const fillings = ["solid", "tonal", "surface", "outline", "clear", "text"];

const colorPalettes = [
  "slate", "gray", "zinc", "neutral", "stone", "red", "orange", "amber", "yellow", "lime", "green",
  "emerald", "teal", "cyan", "sky", "blue", "indigo", "violet", "purple", "fuchsia", "pink", "rose",
];
---

<BaseLayout>
  <div class="p-16 space-y-6">
    <Heading as="h1" size="2xl">Button</Heading>

    <div>
      <Button>Button</Button>
    </div>

    <div>
      <Heading class="mb-2">Shapes</Heading>
      <div class="flex flex-row gap-6 items-center">
        {shapes.map((shape) => (
          <Button {shape}>
            {`${shape[0].toUpperCase()}${shape.slice(1)}`}
          </Button>
        ))}
      </div>
    </div>

    <div>
      <Heading class="mb-2">Fillings</Heading>
      <div class="flex flex-row gap-6">
        {fillings.map((fill) => (
          <Button {fill}>
            {`${fill[0].toUpperCase()}${fill.slice(1)}`}
          </Button>
        ))}
      </div>
    </div>

    <div>
      <Heading class="mb-2">Sizes</Heading>
      <div class="flex flex-row gap-6 items-center">
        {sizes.map((size) => (
          <Button size={size}>
            Button ({size})
          </Button>
        ))}
      </div>
    </div>

    <div>
      <Heading class="mb-2">Icon</Heading>
      <div class="flex flex-row gap-6">
        <Button colorPalette="teal" variant="solid">
          [] Email
        </Button>
        <Button colorPalette="teal" variant="outline">
          Call us []
        </Button>
      </div>
    </div>

    <div>
      <Heading class="mb-2">Colors</Heading>
      <div class="flex flex-col gap-6">
        {colorPalettes.map((colorPalette) => (
          <div class="flex flex-row items-center gap-6">
            <Text class="min-w-[8ch]">
              {`${colorPalette[0].toUpperCase()}${colorPalette.slice(1)}`}
            </Text>
            <Button colorPalette={colorPalette}>
              Button
            </Button>
            <Button colorPalette={colorPalette} fill="outline">
              Button
            </Button>
            <Button colorPalette={colorPalette} fill="surface">
              Button
            </Button>
            <Button colorPalette={colorPalette} fill="tonal">
              Button
            </Button>
          </div>
        ))}
      </div>
    </div>

    <div>
      <Heading class="mb-2">Disabled</Heading>
      <Button disabled>
        Button
      </Button>
    </div>

    <div>
      <Heading class="mb-2">Loading</Heading>
      <div class="flex flex-row gap-6">
        <Button loading>
          Click me
        </Button>
        <Button loading loadingText="Saving...">
          Click me
        </Button>
        <Button loading loadingText="Saving..." loadingSpinner="()">
          Click me
        </Button>
        <Button loading loadingText="Saving..." loadingSpinner="()" spinnerPlacement="end">
          Click me
        </Button>
      </div>
    </div>
  </div>
</BaseLayout>
