---
import BaseLayout from "../layouts/BaseLayout/BaseLayout.astro";
import { default as NovaLink } from "../components/Typography/Link/Link.astro";
---

<BaseLayout>
  <div class="p-16 space-y-6">
    <h1 class="text-2xl font-bold">Link</h1>

    <div>
      <NovaLink href="#">Visit Nova UI</NovaLink>
    </div>

    <div>
      <NovaLink variant="underline" href="#">
        Link (Underline)
      </NovaLink>
    </div>

    <div>
      <NovaLink variant="plain" href="#">
        Link (Plain)
      </NovaLink>
    </div>

    <div>
      <p>
        Visit the{" "}
        <NovaLink
          href="#"
          variant="underline"
          colorPalette="teal"
        >
          Nova UI
        </NovaLink>
        {" "}
        website
      </p>
    </div>

    <div>
      <NovaLink href="#" as="p" colorPalette="purple">
        Visit Nova UI []
      </NovaLink>
    </div>
  </div>
</BaseLayout>
