---
import BaseLayout from "../layouts/BaseLayout/BaseLayout.astro";
import { default as LinkComponent } from "../components/Typography/Link/Link.astro";
---

<BaseLayout>
  <div class="p-16 space-y-6">
    <h1 class="text-2xl font-bold">Link</h1>

    <div>
      <LinkComponent href="#">Visit Chakra UI</LinkComponent>
    </div>

    <div>
      <LinkComponent variant="underline" href="#">
        Link (Underline)
      </LinkComponent>
    </div>

    <div>
      <LinkComponent variant="plain" href="#">
        Link (Plain)
      </LinkComponent>
    </div>

    <div>
      <p>
        Visit the{" "}
        <LinkComponent
          href="https://chakra-ui.com"
          variant="underline"
          colorPalette="teal"
        >
          Chakra UI
        </LinkComponent>
        {" "}
        website
      </p>
    </div>

    <div>
      <LinkComponent href="#" as="p" colorPalette="purple">
        Visit Chakra UI []
      </LinkComponent>
    </div>
  </div>
</BaseLayout>
