---
// ===== Components
import BaseLayout from "../layouts/BaseLayout/BaseLayout.astro";
import Heading from "../components/Typography/Heading/Heading.astro";
import Container from "../components/Layout/Container/Container.astro";
import Box from "../components/Layout/Box/Box.astro";
import Stack from "../components/Layout/Stack/Stack.astro";

// ===== Props
const sizeClasses = ["max-w-sm", "max-w-md", "max-w-xl", "max-w-2xl"];
---

<BaseLayout>
  <Box as="section" class="p-16 space-y-6">
    <Heading as="h1" size="2xl">Container</Heading>

    <Box>
      <Heading class="mb-2">Basic usage</Heading>
      <Box class="border border-gray-400 rounded-md p-10">
        <Container>
          <Box class="px-2 bg-gray-200">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam
            consectetur, tortor in lacinia eleifend, dui nisl tristique nunc.
          </Box>
        </Container>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Sizes</Heading>
      <Box class="border border-gray-400 rounded-md p-10">
        <Stack>
          {sizeClasses.map(sizeClass => (
            <Container class={`${sizeClass}`}>
              <Box class="px-2 bg-gray-200">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam
                consectetur, tortor in lacinia eleifend, dui nisl tristique nunc.
              </Box>
            </Container>
          ))}
        </Stack>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Center content</Heading>
      <Box class="border border-gray-400 rounded-md p-10">
        <Container centerContent>
          <Box class="px-2 bg-gray-200">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam
            consectetur, tortor in lacinia eleifend, dui nisl tristique nunc.
          </Box>
        </Container>
      </Box>
    </Box>

    <Box>
      <Heading class="mb-2">Fluid</Heading>
      <Box class="border border-gray-400 rounded-md p-10">
        <Container fluid>
          <Box class="px-2 bg-gray-200">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam
            consectetur, tortor in lacinia eleifend, dui nisl tristique nunc.
          </Box>
        </Container>
      </Box>
    </Box>
  </Box>
</BaseLayout>
