---
// ===== Components
import BaseLayout from "../layouts/BaseLayout/BaseLayout.astro";
import Heading from "../components/Typography/Heading/Heading.astro";

// ===== Props
const levels = ["1", "2", "3", "4", "5", "6"];
---

<BaseLayout>
  <div class="p-16 space-y-6">
    <Heading level="1">Heading</Heading>

    <div>
      <Heading>The quick brown fox jumps over the lazy dog</Heading>
    </div>

    <div>
      <Heading level="2" class="mb-2">Levels</Heading>
      {levels.map((level) => (
        <div>
          <Heading {level}>
            Nova UI (level {level})
          </Heading>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
