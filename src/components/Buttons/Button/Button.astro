---
import "./Button.styles.css";

import type { ButtonProps } from "./Button.types.ts";

const { ...buttonProps }: ButtonProps = Astro.props;
const {
  class: className,
  asChild = false,
  as: Tag = "button",
  size = "md",
  variant = "solid",
  colorPalette = "gray",
  ...props
} = buttonProps;
---

<button-component
  class={`nova-button size-${size} variant-${variant} color-palette-${colorPalette}`}
  class:list={[className]}
  {...props}
  hidden
>
  {asChild ?
    <slot /> :
    <Tag>
      <slot />
    </Tag>}
</button-component>
