---
import "./Button.styles.css";

import { getClassList } from "./Button.ts";

import type { ButtonProps } from "./Button.types.ts";

const { ...buttonProps }: ButtonProps = Astro.props;
const {
  class: className,
  as: Tag = "button",
  loading = false,
  loadingText,
  spinner,
  spinnerPlacement = "start",
  ...props
} = buttonProps;
const { disabled = false } = buttonProps;
const classList = getClassList(buttonProps);
---

<Tag class:list={[classList, className]} {...props} data-loading={loading} disabled={disabled || loading}>
  {loading ?
    (<span class="loading-content">
      {spinnerPlacement === "start" && (
        loadingText ?
          (spinner ? spinner : <span>[]</span>) :
          (<span class="spinner-wrapper">
            {spinner ? spinner : <span>[]</span>}
          </span>)
      )}
      {loadingText ?
        loadingText :
        <span class="text-wrapper">
          <slot />
        </span>}
      {spinnerPlacement === "end" && (
        loadingText ?
          (spinner ? spinner : <span>[]</span>) :
          (<span class="spinner-wrapper">{spinner ?
            spinner :
            <span>[]</span>}
          </span>)
      )}
    </span>) :
    <slot />}
</Tag>
