---
// ===== Components
import IconButton from "../IconButton/IconButton.astro";

// ===== Types
import type { ButtonsBaseProps } from "../Buttons.types.ts";

// ===== Props
const hasSlot = Astro.slots.has("default");

const {
  "aria-label": ariaLabel = "Close",
  ...props
}: ButtonsBaseProps = Astro.props;
---

<IconButton aria-label={ariaLabel} {...props}>
  {hasSlot ?
    <slot /> :
    <svg viewBox="0 0 24 24" class="hamburger-icon">
      <path
        d="M3 6h18a1 1 0 0 1 0 2H3a1 1 0 1 1 0-2zm0 5h18a1 1 0 0 1 0 2H3a1 1 0 1 1 0-2zm0 5h18a1 1 0 0 1 0 2H3a1 1 0 1 1 0-2z" />
    </svg>
  }
</IconButton>
