---
// ===== Styles
import "./Heading.styles.css";

// ===== Types
import type { HeadingProps } from "./Heading.types.ts";

// ===== Scripts
import { getHeadingClassList } from "./Heading.ts";

// ===== Props
const {
  as: Tag = "h2",
  class: className,
  size,
  colorPalette,
  ...props
}: HeadingProps = Astro.props;

const classList = getHeadingClassList({ size, colorPalette });
---

<Tag class:list={[classList, className]} {...props}>
  <slot />
</Tag>
