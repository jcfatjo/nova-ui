---
import "./Link.styles.css";

import type { LinkProps } from "./Link.types.ts";

const { ...linkProps }: LinkProps = Astro.props;
const {
  class: className,
  asChild = false,
  as: Tag = "a",
  variant = "plain",
  colorPalette = "gray",
  ...props
} = linkProps;
---

<style define:vars={{
  "nova-colors-color-palette-fg": `var(--nova-colors-${colorPalette}-800)`,
  "mix-textDecorationColor": "color-mix(in srgb, currentColor 20%, transparent)",
}}>
</style>

<link-component class={`link ${variant}`} class:list={[className]} {...props} hidden>
  {asChild ?
    <slot /> :
    <Tag>
      <slot />
    </Tag>}
</link-component>
