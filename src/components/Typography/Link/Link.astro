---
import "./Link.styles.css";

import type { LinkProps } from "./Link.types.ts";

const { ...linkProps }: LinkProps = Astro.props;
const {
  class: className,
  asChild = false,
  as: Tag = "a",
  variant = "plain",
  colorPalette = "gray",
  ...props
} = linkProps;

const css = `
.link.variant-${variant}.color-palette-${colorPalette} {
  --mix-textDecorationColor: color-mix(in srgb, currentColor 20%, transparent);
}
`;
---

<link-component
  class={`link variant-${variant} color-palette-${colorPalette}`}
  class:list={[className]}
  variant={variant}
  color-palette={colorPalette}
  {...props}
  hidden
>
  {asChild ?
    <slot /> :
    <Tag>
      <slot />
    </Tag>}
</link-component>
