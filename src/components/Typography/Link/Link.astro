---
// ===== Styles
import "./Link.styles.css";

// ===== Types
import type { LinkProps } from "./Link.types.ts";

// ===== Scripts
import { getLinkClassList } from "./Link.ts";

// ===== Props
const {
  as: Tag = "a",
  class: className,
  underline,
  external = false,
  colorPalette,
  ...props
}: LinkProps = Astro.props;

const classList = getLinkClassList({ underline, colorPalette });
---

<Tag class:list={[classList, className]} rel={external ? "noopener noreferrer" : undefined} {...props}>
  <slot />
</Tag>
