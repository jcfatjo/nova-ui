---
import "./Link.styles.css";

import type { LinkProps } from "./Link.types.ts";

const { ...linkProps }: LinkProps = Astro.props;
const {
  class: className,
  asChild = false,
  as: Tag = "a",
  variant = "plain",
  colorPalette = "gray",
  ...props
} = linkProps;
---

<link-component
  class={`nova-link variant-${variant} color-palette-${colorPalette}`}
  class:list={[className]}
  {...props}
  hidden
>
  {asChild ?
    <slot /> :
    <Tag>
      <slot />
    </Tag>}
</link-component>
